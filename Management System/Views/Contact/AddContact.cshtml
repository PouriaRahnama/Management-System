@model AddContactCustomerDto
@{
    ViewData["Title"] = "افزودن مخاطب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    const searchParams = new URLSearchParams(window.location.search);
    const customerId = document.getElementById("txtCustomerId");
    customerId.value = searchParams.get('CustomerId');
</script>

<div class="text-center">
    <h1 class="display-4">تعریف مخاطب جدید</h1>
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body" style="text-align:right">
                    <h5 class="card-title fw-semibold mb-4">اطلاعات مخاطب</h5>
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="AddContact" method="post" >
                                <div class="row">
                                    <div class="mb-3 col-4">
                                        <label asp-for="FirstName" class="form-label">نام مخاطب</label>
                                        <input type="text" asp-for="FirstName" class="disabledTextInput form-control">
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                    <div class="mb-3 col-4">
                                        <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                                        <input type="text" asp-for="LastName" class="disabledTextInput form-control">
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                    <div class="mb-3 col-4">
                                        <label asp-for="Role" class="form-label">سمت </label>
                                        <input type="text" asp-for="Role" class="disabledTextInput form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col-4">
                                        <label class="form-label">جنسیت :</label>
                                        <br/>
                                        <span>
                                            آقا
                                            <input type="radio" name="GenderName" value="1" />
                                        </span>
                                        <span>
                                            خانم
                                            <input type="radio" name="GenderName" value="0" />
                                        </span>
                                    </div>
                                    <div class="mb-3 col-4">
                                        <label asp-for="Phone" class="form-label">تلفن</label>
                                        <input type="text" asp-for="Phone" class="disabledTextInput form-control">
                                    </div>
                                    <div class="mb-3 col-4">
                                        <label asp-for="LocalNumber" class="form-label">شماره داخلی </label>
                                        <input type="text" asp-for="LocalNumber" class="disabledTextInput form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col-4">
                                        <label asp-for="Mobile" class="form-label">موبایل</label>
                                        <input type="text" asp-for="Mobile" class="disabledTextInput form-control">
                                    </div>
                                    <div class="mb-3 col-4">
                                        <label asp-for="Email" class="form-label">ایمیل</label>
                                        <input type="text" asp-for="Email" class="disabledTextInput form-control">
                                        <input asp-for="CustomerId" id="txtCustomerId" hidden/>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary m-1">ثبت</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

