@model IEnumerable<OrderDto>
@{
    ViewData["Title"] = "سفارشات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">

    <h1 class="display-4">مدیریت سفارشات</h1>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="card-body p-4" style="text-align:right">
                        <a asp-action="Create" class="btn btn-outline-primary m-1">ایجاد سفارش جدید</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <table>
                        <thead class="card-title fw-semibold mb-4">
                            <tr>
                                <td></td>
                                <td></td>
                                <td>نام مشتری</td>
                                <td>تاریخ سفارش</td>
                                <td></td>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <form method="post" asp-action="Detail" asp-route-Id="@item.Id">
                                                <button type="submit" class="btn btn-success m-1" title="بروز رسانی">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-refresh" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4" /><path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4" /></svg>
                                                </button>
                                            </form>
                                        </td>
                                        <td>
                                            <form asp-action="Delete" asp-route-Id="@item.Id" method="post">
                                                <button title="حذف سفارش" type="submit" class="btn btn-danger m-1"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-rounded-x-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 2l.324 .001l.318 .004l.616 .017l.299 .013l.579 .034l.553 .046c4.785 .464 6.732 2.411 7.196 7.196l.046 .553l.034 .579c.005 .098 .01 .198 .013 .299l.017 .616l.005 .642l-.005 .642l-.017 .616l-.013 .299l-.034 .579l-.046 .553c-.464 4.785 -2.411 6.732 -7.196 7.196l-.553 .046l-.579 .034c-.098 .005 -.198 .01 -.299 .013l-.616 .017l-.642 .005l-.642 -.005l-.616 -.017l-.299 -.013l-.579 -.034l-.553 -.046c-4.785 -.464 -6.732 -2.411 -7.196 -7.196l-.046 -.553l-.034 -.579a28.058 28.058 0 0 1 -.013 -.299l-.017 -.616c-.003 -.21 -.005 -.424 -.005 -.642l.001 -.324l.004 -.318l.017 -.616l.013 -.299l.034 -.579l.046 -.553c.464 -4.785 2.411 -6.732 7.196 -7.196l.553 -.046l.579 -.034c.098 -.005 .198 -.01 .299 -.013l.616 -.017c.21 -.003 .424 -.005 .642 -.005zm-1.489 7.14a1 1 0 0 0 -1.218 1.567l1.292 1.293l-1.292 1.293l-.083 .094a1 1 0 0 0 1.497 1.32l1.293 -1.292l1.293 1.292l.094 .083a1 1 0 0 0 1.32 -1.497l-1.292 -1.293l1.292 -1.293l.083 -.094a1 1 0 0 0 -1.497 -1.32l-1.293 1.292l-1.293 -1.292l-.094 -.083z" fill="currentColor" stroke-width="0" /></svg></button>

                                            </form>
                                        </td>
                                        <td>
                                            @item.Customer.Name
                                        </td>
                                        <td>
                                            @item.CreateDate
                                        </td>
                                        <td>
                                            <table width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>نام محصول</th>
                                                        <th>توضیحات</th>
                                                        <th></th>
                                                        <th></th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var proc in item.Items)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @proc.Product.Name
                                                            </td>
                                                            <td>
                                                                @proc.Description
                                                            </td>
                                                            <td>
                                                                <form asp-action="DeleteItem" asp-route-OrderId="@item.Id" asp-route-ItemId="@proc.Id" method="post">
                                                                    <button type="submit" class="btn btn-danger m-1">حذف محصول</button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

